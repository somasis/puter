[general]
regex-style-search=true
ignore=body-is-missing,max-line-length

# [body-min-length]
# min-length=0

[ignore-by-body]
# Ignore line length maximum when using `nix flake update --commit-lock-file`
# and its default commit message.
regex=^Flake lock file updates:$
ignore=B1,body-max-line-length
